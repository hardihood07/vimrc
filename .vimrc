
syntax enable

set number

set ruler

set cmdheight=2

set ignorecase

set hlsearch

set autoindent nosmartindent 

set expandtab

set tabstop=4

set softtabstop=4   

set shiftwidth=4

set cursorline

set showmatch

set wildmenu

set showcmd            

set laststatus=2
set statusline=(%{getcwd()}/%f)\ (line\ %l\/%L,\ col\ %c)

let python_highlight_all = 1
